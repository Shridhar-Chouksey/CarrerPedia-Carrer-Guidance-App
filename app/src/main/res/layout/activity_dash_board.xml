<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/drawer"
    android:background="@android:color/holo_blue_bright"
    tools:context=".activities.DashBoard">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="302dp"
        android:layout_margin="18dp"
        app:cardElevation="40dp"
        app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/holo_purple"
                android:orientation="vertical">


                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/image_slider1"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/upsc"
                    app:iss_auto_cycle="true"
                    app:iss_delay="0"
                    app:iss_period="2000" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_orange_dark"
                    android:gravity="left"
                    android:text="     CIVIL SERVICES"
                    android:textColor="#070707"
                    android:textSize="35dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/civilservicesbtn"
                    android:onClick="ViewChoices"
                    android:layout_width="155dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:layout_margin="6dp"
                    android:background="@drawable/view_all_button"
                    android:text="View Choices"
                    android:textColor="@android:color/background_dark"
                    android:textSize="22sp"
                    android:textStyle="normal">


                </Button>


            </LinearLayout>




    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="302dp"
        android:layout_margin="18dp"
        app:cardElevation="40dp"
        app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/holo_purple"
                android:orientation="vertical">


                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/image_slider2"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_margin="10dp"
                    app:iss_auto_cycle="true"
                    app:iss_delay="0"
                    app:iss_period="2000" />


                <TextView
                    android:id="@+id/title1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_orange_dark"
                    android:gravity="left"
                    android:text="     ENGINEERING"
                    android:textColor="#070707"
                    android:textSize="35dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/engineerbtn"
                    android:onClick="ViewChoices"
                    android:layout_width="155dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:layout_margin="6dp"
                    android:background="@drawable/view_all_button"
                    android:text="View Choices"
                    android:textColor="@android:color/background_dark"
                    android:textSize="22sp"
                    android:textStyle="normal">


                </Button>


            </LinearLayout>




    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="302dp"
            android:layout_margin="18dp"
            app:cardElevation="40dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/image_slider3"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_margin="10dp"
                    app:iss_auto_cycle="true"
                    app:iss_period="2000"
                    app:iss_delay="0"/>


                <TextView
                    android:id="@+id/title2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Title"
                    android:textStyle="bold"
                    android:textColor="#070707"
                    android:textSize="35dp"/>

                <Button
                    android:layout_width="155dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:layout_margin="6dp"
                    android:background="@drawable/view_all_button"
                    android:text="View Choices"
                    android:textColor="@android:color/background_dark"
                    android:textSize="22sp"
                    android:textStyle="normal">


                </Button>


            </LinearLayout>




        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="302dp"
            android:layout_margin="18dp"
            app:cardElevation="40dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/image_slider4"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_margin="10dp"
                    app:iss_auto_cycle="true"
                    app:iss_period="2000"
                    app:iss_delay="0"/>


                <TextView
                    android:id="@+id/title3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Title"
                    android:textStyle="bold"
                    android:textColor="#070707"
                    android:textSize="35dp"/>

                <Button
                    android:layout_width="155dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:layout_margin="6dp"
                    android:background="@drawable/view_all_button"
                    android:text="View Choices"
                    android:textColor="@android:color/background_dark"
                    android:textSize="22sp"
                    android:textStyle="normal">


                </Button>


            </LinearLayout>




        </androidx.cardview.widget.CardView>

    </LinearLayout>

    </androidx.core.widget.NestedScrollView>
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#FFFFFF"
        app:headerLayout="@layout/navbar_header"
        app:menu="@menu/main_menu">

    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>




