<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light"
    tools:context=".activities.CivilServicesAsCarrer">

    <TextView
        android:id="@+id/CivilServicesTextView"
        android:layout_width="356dp"
        android:layout_height="37dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:background="@android:color/holo_blue_bright"
        android:text="  Civil Services as a Carrer"
        android:textColor="@android:color/black"
        android:textColorLink="#C8AC0F"
        android:textSize="28sp"
        android:textStyle="bold" />


<androidx.core.widget.NestedScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/CivilServicesTextView">

        <TextView
            android:id="@+id/CivilServicesContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:paddingLeft="4dp"
            android:layout_below="@+id/civilservicesTextView"
            android:background="@android:color/holo_blue_dark"
            android:lineSpacingExtra="5sp"
            android:text="@string/paragraph"
            android:textColor="@color/light_font"
            android:textSize="19sp"
            />
</androidx.core.widget.NestedScrollView>

</RelativeLayout>